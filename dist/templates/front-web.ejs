    <script type="text/javascript">
        var sliderInit = false;

        $(document).ready(function() {
            var $slider = $('#slider');
            var $dots = $('#slider-dots');

            var DOT_CONTEXTS = {
                'normal': '<img src="../../assets/imgs/ic_circle--noFill.svg" />',
                'active': '<img src="../../assets/imgs/ic_circle--fill.svg" />'
            };

            function initSlider() {
                if (sliderInit) return;

                $slider.slick({
                    dots: false,
                    arrows: false,
                    infinite: false,
                    speed: 300
                });
                $slider.slick('setPosition');
                sliderInit = true;
                initDots();
                $slider.slick('slickGoTo', 0);
            }

            function initDots() {
                $slider.on('beforeChange', function(e, slick, currentSlider, nextSlider){
                    $dots.children().removeClass('active');
                    $dots.children().eq(nextSlider).addClass('active');
                    confirmDots();
                });

                $dots.children().on('click tap', function() {
                   $slider.slick('slickGoTo', $(this).attr('idx'));
                });
            }

            function confirmDots(){
                for (var idx=0; idx < $dots.children().length; idx++) {
                    var $dot = $($dots.children().eq(idx));
                    $dot.empty();

                    if ($dot.hasClass('active'))
                        $dot.html(DOT_CONTEXTS.active);

                    else
                        $dot.html(DOT_CONTEXTS.normal);
                }
            }

            if ($(window).width() <= 480) initSlider();
            else $(window).on('resize orientationchange', initSlider);
        });
    </script>
